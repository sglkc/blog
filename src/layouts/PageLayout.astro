---
import Footer from '@/components/Footer.astro';
import Navbar from '@/components/Navbar.astro';
import BaseLayout from './BaseLayout.astro';

const props = Astro.props;
const { title, description, footer } = props.frontmatter ?? props;
---

<BaseLayout {title} {description}>
  <header class="mt-8">
    <h1 class="mt-0 mb-2 text-3xl font-semibold text-balance">{ title }</h1>
    <h2 class="my-0 text-xl font-normal text-balance">{ description }</h2>
  </header>
  <Navbar sticky={true} grow={true} />
  <hr />
  <main class="my-12">
    <slot />
  </main>
  <Footer {footer} />
</BaseLayout>
