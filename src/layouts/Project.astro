---
import { Image } from '@astrojs/image/components';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import Page from '@/components/Page.astro';

export interface Props {
  content: {
    title: string,
    description: string,
    source: string,
    demo: string,
    stack: Array<string>,
    thumbnail?: string,
  };
  rawContent: Function;
}

const { content, rawContent } = Astro.props;
const { title, description, stack, source, demo, thumbnail } = content;
---

<Page {title} {description} project={content}>
  <Navbar style="-mt-6 justify-center" />
  <div class="text-center">
    <h1 class="text-3xl font-semibold mt-8">{title}</h1>
    { thumbnail && (
      <Image
        src={'/assets/project/' + thumbnail}
        alt={title + ' thumbnail image'}
        height="1000"
        aspectRatio="16:9"
        draggable="false"
      />
    )}
    <div class="flex flex-wrap gap-x-2 justify-center">
      { stack.map((s: string) => <span>[{s}]</span>) }
    </div>
    <div class="text-center mt-4 text-lg">
      <a class="mr-2 p-2" rel="prefetch" href={source}>Source</a>
      <a class="p-2" rel="prefetch" href={demo}>Demo</a>
    </div>
  </div>
  <hr />
  <slot />
  <Footer />
</Page>
