---
import Page from '@/components/Page.astro';

const { content } = Astro.props;
const { title, description, footer } = content;
---

<Page {title} {description}>
    <h1 class="text-3xl font-semibold mb-2">{title}</h1>
    <nav class="flex gap-5">
      <a class="hover:underline" href="/">Home</a>
      <a class="hover:underline" href="/blog">Blog</a>
      <a class="hover:underline" href="#">Projects</a>
      <a class="hover:underline" href="/about">About</a>
      <a class="hover:underline cursor-pointer" onclick="toggleTheme()">
        Theme
      </a>
    </nav>
  <hr />
  <slot />
  <hr />
  <p class="text-xs">{footer}</p>
</Page>
