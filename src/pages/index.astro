---
import Page from '@components/Page.astro';

const title = 'Home // sglkc';
const description = '@sglkc Personal Website';
---

<Page {title} {description}>
  <div
    class="fixed max-w-[768px] h-fit inset-0 bottom-16 m-auto px-8 flex gap-8"
  >
    <div>
      <div class="flex justify-between">
        <a class="block w-fit self-end" href="https://github.com/sglkc">
          <img
            class="h-32 drop-shadow drop-shadow-zinc rounded-full"
            src="https://avatars.githubusercontent.com/u/31957516?s=400&v=4"
            draggable="false"
          >
        </a>
        <nav class="flex flex-col gap-4 sm:hidden">
          <a class="hover:underline" href="/">Blog</a>
          <a class="hover:underline" href="/">Projects</a>
          <a class="hover:underline" href="/">About</a>
          <a class="hover:underline cursor-pointer" onclick="toggleTheme()">
            Theme
          </a>
        </nav>
      </div>
      <main class="mt-8 flex flex-col gap-3 pr-5 sm:pr-0">
        <h1 class="font-bold text-2xl tracking-widest">
          Hi! I'm <a
            class="underline decoration-dotted"
            href="https://github.com/sglkc"
          >@sglkc</a>.
        </h1>
        <h2 class="font-semibold text-xl whitespace-nowrap">
          A <span title="I just love it too much">JavaScript-based</span> <wbr>
          Full-stack Developer
        </h2>
        <p class="text-lg text-justify">
          I'm an undergraduate and a freelancer who works mostly in
          Web Development! I speak English and Bahasa Indonesia.
        </p>
      </main>
    </div>
    <nav class="sm:flex flex-col gap-4 hidden">
      <a class="hover:underline" href="/">Blog</a>
      <a class="hover:underline" href="/">Projects</a>
      <a class="hover:underline" href="/">About</a>
      <a class="hover:underline cursor-pointer" onclick="toggleTheme()">Theme</a>
    </nav>
  </div>
</Page>
