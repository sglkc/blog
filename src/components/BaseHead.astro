---
export type HeadProps = {
  title: string;
  description: string;
  image?: string;
};

const { title, description, image } = Astro.props;
const url = new URL(Astro.url.pathname, Astro.site).toString();

// TODO: canonical meta etc
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/png" href="/favicon.png" />

  <title>{title} // sglkc</title>

  <meta name="title" content={title + ' // sglkc'} />
  <meta name="description" content={description} />
  <meta name="theme-color" content="#ECC7BC" />

  <meta property="og:type" content="website" />
  <meta property="og:url" content={url} />
  <meta property="og:title" content={title + ' // sglkc'} />
  <meta property="og:description" content={description} />
  { image && <meta property="og:image" content={image} /> }

  <meta property="twitter:card" content="summary" />
  <meta property="twitter:url" content={url} />
  <meta property="twitter:title" content={title + ' // sglkc'} />
  <meta property="twitter:description" content={description} />
  { image && <meta property="twitter:image" content={image} /> }
</head>
