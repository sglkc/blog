---
import type { PostProps } from '@/types/Post';

const props = Astro.props as PostProps;
const { title, description, created, thumbnail, tags } = props.frontmatter;
---

<div class="my-6 py-2 flex gap-6 justify-between w-full">
  <div class="flex flex-col">
    <p class="mt-0 text-xs sm:text-sm">{created}</p>
    <a class="decoration-none" href={props.url} target="_self">
      <h1 class="my-0 text-lg sm:text-xl">{title}</h1>
    </a>
    <p class="mt-2 text-sm sm:text-base">{description}</p>
    <div class="my-0 flex flex-wrap gap-x-4 text-sm">
      { tags.map((tag: string) => <span>#{tag}</span>) }
    </div>
  </div>
  { thumbnail &&
    <img
      class="my-auto aspect-square object-cover"
      src={'/assets/post/' + thumbnail}
      alt={title + ' thumbnail image'}
      draggable="false"
      width="25%"
      height="100%"
    />
  }
</div>
