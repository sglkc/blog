---
export interface Props {
  post: any;
}

const { post } = Astro.props;
const { title, description, created, tags } = post.frontmatter;
const snippet = description.slice(0, 100) + (description.length > 100 ? '...' : '');;
---

<div class="my-6 py-2 flex flex-col gap-4">
  <p class="my-0 text-sm -mb-2">{created}</p>
  <a class="text-xl font-semibold my-0" href={post.url}>{title}</a>
  <h4 class="font-light my-0 text-sm sm:text-base">{snippet}</h4>
  <div class="flex flex-wrap gap-x-4 text-sm">
    { tags.map((tag: string) => <span>#{tag}</span>) }
  </div>
</div>
