---
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'posts'>;

const { slug, data } = Astro.props;
const { title, description, created, thumbnail, tags } = data;
---
<li class="my-6 py-2 flex gap-6 justify-between w-full">
  <div class="flex flex-col">
    <p class="mt-0 text-xs sm:text-sm">{created}</p>
    <a class="decoration-none" href={`/post/${slug}/`} target="_self">
      <h1 class="my-0 text-lg sm:text-xl text-balance">{title}</h1>
    </a>
    <p class="mt-2 text-sm sm:text-base text-balance">{description}</p>
    <div class="my-0 flex flex-wrap gap-x-4 text-sm">
      { tags.map((tag: string) => <span>#{tag}</span>) }
    </div>
  </div>
  { thumbnail &&
    <img
      class="my-auto aspect-square object-cover"
      src={'/assets/post/' + thumbnail}
      alt={title + ' thumbnail image'}
      draggable="false"
      width="25%"
      height="100%"
    />
  }
</li>
