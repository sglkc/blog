---
import { Image } from '@astrojs/image/components';

export interface Props {
  project: {
    url: string,
    frontmatter: {
      title: string,
      description: string,
      source: string,
      demo: string,
      stack: Array<string>,
      thumbnail: string,
    }
  };
};

const { project } = Astro.props;
const { title, description, source, demo, thumbnail, stack } = project.frontmatter;
---

<div class="flex flex-col gap-4 mx-auto">
  <a class="text-xl font-semibold my-0" rel="prefetch" href={project.url}>
    <Image
      class="my-0"
      src={'/assets/project/' + thumbnail}
      alt={thumbnail}
      height="300"
      aspectRatio="16:9"
    />
    <p class="mb-0">{title}</p>
  </a>
  <h4 class="font-light my-0 text-sm sm:text-base">{description}</h4>
  <div class="flex flex-wrap gap-x-2 text-sm mt-auto">
    { stack.map((s: string) => <span>[{s}]</span>) }
  </div>
  <div class="text-right m-0">
    <a class="mr-2 p-2" rel="prefetch" href={source}>Source</a>
    <a class="p-2" rel="prefetch" href={demo}>Demo</a>
  </div>
</div>
