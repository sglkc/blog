---
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'projects'>;

const { slug, data } = Astro.props;
const { title, description, thumbnail, stack } = data;
---

<div class="flex flex-col gap-4 mx-auto">
  <a class="decoration-none" rel="prefetch" href={`/project/${slug}/`} target="_self">
    <img
      class="aspect-video object-cover"
      src={'/assets/project/' + thumbnail}
      alt={title + ' thumbnail image'}
      draggable="false"
      width="100%"
      height="100%"
    />
    <h1 class="mt-6 mb-0 text-xl">{title}</h1>
  </a>
  <p class="font-light my-0 text-sm sm:text-base">{description}</p>
  <div class="flex flex-wrap gap-x-2 gap-y-1 text-sm mt-auto">
    { stack.map((s: string) => <span>[{s}]</span>) }
  </div>
</div>
