---
import type { ProjectProps } from '@/types/Project';

type Props = ProjectProps;

const { url, frontmatter } = Astro.props as Props;
const { title, description, source, demo, thumbnail, stack } = frontmatter;
---

<div class="flex flex-col gap-4 mx-auto">
  <a class="text-xl font-semibold my-0" rel="prefetch" href={url}>
    <img
      class="aspect-video object-cover"
      src={'/assets/project/' + thumbnail}
      alt={title + ' thumbnail image'}
      draggable="false"
      width="100%"
      height="100%"
    />
    <p class="mb-0">{title}</p>
  </a>
  <h4 class="font-light my-0 text-sm sm:text-base">{description}</h4>
  <div class="flex flex-wrap gap-x-2 gap-y-1 text-sm mt-auto">
    { stack.map((s: string) => <span>[{s}]</span>) }
  </div>
  <div class="text-right m-0 min-h-6">
    { source && <a class="mr-2 p-2" href={source}>Source</a> }
    { demo && <a class="p-2" href={demo}>Demo</a> }
  </div>
</div>
